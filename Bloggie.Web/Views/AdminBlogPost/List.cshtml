@model List<Bloggie.Web.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All BlogPosts - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div>
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-2">
                                        @tag.Name
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminBlogPost"
                               asp-action="Edit"
                               asp-route-id="@blogPost.Id">Edit</a>

                            <form method="post">
                                <button type="submit"
                                        class="btn btn-danger ms-2"
                                        asp-area=""
                                        asp-controller="AdminBlogPost"
                                        asp-action="Delete"
                                        asp-route-id="@blogPost.Id">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <!-- Add a button to add a new blog post -->
    <a href="@Url.Action("Add", "AdminBlogPost")" class="btn btn-primary">Add New Blog Post</a>



